<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="The Cafe Rio Ltd. One of the best buffets in Town">

    <!-- title -->
    <title>The Cafe Rio Restaurant</title>

    <!-- favicon -->
    <link rel="shortcut icon" type="image/ico" href="~/img/favicon.ico">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/css/animate.css">
    <!-- Datepicker css -->
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.min.css">
    @RenderSection("css", required: false)
    <!-- fancybox css -->
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="~/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="~/css/responsive.css">

</head>
<body>

    <!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
    <!-- header -->
    <div class="top-header-area" id="sticker">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 text-center">
                    <div class="main-menu-wrap d-flex align-items-center">
                        <div class="site-logo-box col-lg-3">
                            <!-- logo -->
                            <div class="site-logo">
                                <a href="index.html">
                                    <img src="~/img/cafe-rio-logo-white-version-180x180.png" alt="the-cafe-rio-logo" asp-append-version="true">
                                </a>
                            </div>
                            <!-- logo -->
                        </div>
                        <div class="main-menu-box col-lg-9">
                            <!-- menu start -->
                            <nav class="main-menu">
                                <ul>
                                    <li class="current-list-item"><a href="#">HOME</a></li>
                                    <li><a href="#">RESERVATION</a></li>
                                    <li>
                                        <a href="#">MENUS</a>
                                        <ul class="sub-menu">
                                            <li><a href="#">Zigatola Branch</a></li>
                                            <li><a href="#">Uttara Branch</a></li>
                                            <li><a href="#">Mirpur Branch</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="#">SERVICES</a>
                                    </li>
                                    <li>
                                        <a href="#">ABOUT</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="Contact">CONTACT</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Sign In</a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="mobile-menu"></div>
                            <!-- menu end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->

    @RenderBody()

    <!-- footer -->
    <div class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box about-widget">
                        <h2 class="widget-title">About us</h2>
                        <p>
                            The Cafe Rio is one of the best buffet restaurants in Dhaka.
                            We are committed to providing the highest value at the lowest price to our consumers.
                            It is the best place to hold an event like weddings, birthdays, corporate events, etc…
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box get-in-touch">
                        <h2 class="widget-title">Get in Touch</h2>
                        <ul>
                            <li>thecaferioltd@gmail.com</li>
                            <li>Uttara: +880 1793-929230</li>
                            <li>Zigatola: +880 1961-116222</li>
                            <li>Mirpur: +880 1407-600700</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box pages">
                        <h2 class="widget-title">Pages</h2>
                        <ul>
                            <li><a href="index.html">Home</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Shop</a></li>
                            <li><a href="#">News</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box subscribe">
                        <h2 class="widget-title">Subscribe</h2>
                        <p>Subscribe to our mailing list to get the latest updates.</p>
                        <form action="index.html">
                            <input type="email" placeholder="Email">
                            <button type="submit"><i class="fas fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end footer -->
    @{
        ViewBag.year = DateTime.Now.Year;
    }
    <!-- copyright -->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <p>Copyrights &copy; @ViewBag.year - The Cafe Rio Ltd.  All Rights Reserved.<br></p>
                </div>
                <div class="col-lg-6 text-right col-md-12">
                    <div class="social-icons">
                        <ul>
                            <li><a href="https://www.facebook.com/caferio.bd" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="https://www.instagram.com/thecaferio/" target="_blank"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="https://www.youtube.com/channel/UC1l7NI2ipyqnXSV1f-u_LLQ" target="_blank"><i class="fab fa-youtube"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end copyright -->
    <!-- jquery -->
    <script src="~/js/jquery-1.11.3.min.js"></script>
    <script src="~/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <!-- owl carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- Datepicker -->
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <!-- Clockpicker -->
    <script src="~/js/clockpicker.min.js"></script>
    <!-- FancyBox -->
    <script src="~/js/jquery.fancybox.min.js"></script>
    <!-- magnific popup -->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="~/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="~/js/sticker.js"></script>
    <!-- main js -->
    <script src="~/js/main.js"></script>


</body>

</html>